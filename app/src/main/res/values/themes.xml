<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Showfa_Customer_android" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:statusBarColor">@color/theme_color</item>

    </style>

    <style name="Theme.Showfa_Customer_android" parent="Base.Theme.Showfa_Customer_android" />

    <style name="MaterialTextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/theme_color</item>
        <item name="fontFamily">@font/font_regular</item>
    </style>

    <style name="MaterialEdittext">
        <item name="android:textColor">@color/theme_color</item>
        <item name="android:textColorHint">@color/theme_color</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="maxLines">1</item>
        <item name="singleLine">true</item>
        <item name="background">@color/transparent</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/font_regular</item>
        <item name="android:imeOptions">actionNext</item>

    </style>

    <style name="MaterialButton">
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="backgroundTint">@color/theme_color</item>
        <item name="android:textSize">20sp</item>

    </style>

    <style name="imageSize">
        <item name="cornerSize">50%</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

